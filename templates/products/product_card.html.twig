<div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 my-4">
    <div class="border-card">
        <a href="{{path ('product_show', {'slug': product.slug})}}" class="link-for-show-img">
            <img src="{{ product.image }}" class="img-fluid" id="profil" alt="{{ product.name }}">
            <div class="text-right color-provider mr-3">
                <button class="btn pl-3 pr-3 border-pres">
                    <p class="heart border-style-products p-2">
                        <i class="far fa-heart like-icon"></i>
                    </p>
                </button>
            </div>
        </a>
        <div class="card-body">
            <a href="{{path ('product_show', {'slug': product.slug})}}" class="link-for-show">
                <h4>
                    {{ product.name }}
                </h4>
            </a>
            <a href="{{path ('product_show', {'slug': product.slug})}}" class="link-for-show">
                <div class="row">
                    {% for style in product.style %}
                    <div class="col-6">
                        <p class=" mt-2 text-framboise">#{{style.name}}</p>
                    </div>
                    {% endfor %}
                </div>
            </a>
        </div>
    </div>
</div>